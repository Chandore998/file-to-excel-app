{
  "name": "file-to-excel-app",
  "version": "1.0.0",
  "description": "File to Excel converter app",
  "license": "ISC",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:rust": "cd rust-core && cargo build --release",
    "build": "npm run build:rust && electron-builder",
    "build:win": "npm run build:rust && electron-builder --win",
    "build:mac": "npm run build:rust && electron-builder --mac"
  },
  "build": {
    "appId": "com.filetoexcel.app",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "forceCodeSigning": false,
    "extraResources": [
      {
        "from": "rust-core/target/release/",
        "to": "rust-core/target/release/",
        "filter": ["rust-core.exe", "rust-core"]
      }
    ],
    "asarUnpack": [
      "rust-core/target/release/**"
    ]
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  }
}
